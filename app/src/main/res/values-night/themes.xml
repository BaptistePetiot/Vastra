<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screen theme -->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/vastra_dark_blue</item>
        <item name="android:navigationBarColor">@color/vastra_dark_blue</item>
    </style>

    <!-- first theme -->
    <style name="firstTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:statusBarColor">@color/vastra_blue</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
    </style>

    <!-- signup theme -->
    <style name="signupTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:statusBarColor">@color/vastra_blue</item>
        <item name="android:actionBarStyle">@style/signupActionBar</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
    </style>

    <!-- signup action bar -->
    <style name="signupActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/vastra_dark_blue</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BottomNav" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vastra_blue</item>
        <item name="colorPrimaryVariant">@color/vastra_dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/vastra_blue</item>
        <!-- Customize your theme here. -->
    </style>
</resources>